@{
  Layout = "_Layout";
}

@model Bakery.Models.Flavor

<h2>Add a treat</h2>

<h4>Add a treat to this item: @Html.DisplayFor(model => model.Name)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.FlavorId)

    @Html.Label("Select treat")
    @Html.DropDownList("TreatId")

    <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to flavor", "Details", new { id = Model.FlavorId})</p>